<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".MainActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@android:dimen/notification_large_icon_width"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/tv1"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@drawable/et"
            android:gravity="center"
            android:text="Bài 1"
            android:textColor="@android:color/holo_red_dark"
            android:textSize="20sp" />

        <TextView
            android:id="@+id/tv2"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@drawable/tv_off"
            android:gravity="center"
            android:text="Bài 2"
            android:textColor="@android:color/darker_gray"
            android:textSize="20sp" />
    </LinearLayout>

    <LinearLayout
        android:background="@drawable/tv4"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/_15sdp"
        android:orientation="vertical"
        >

        <LinearLayout
            android:layout_marginRight="@dimen/_1sdp"
            android:layout_marginLeft="@dimen/_1sdp"
            android:layout_width="match_parent"
            android:layout_height="@dimen/_40sdp"
            android:orientation="horizontal"
            android:weightSum="13">
            <!--            3-2-3-3-2-->

            <TextView
                android:id="@+id/boxtile1"
                android:layout_width="0dp"
                android:layout_height="@dimen/_40sdp"
                android:layout_weight="3"
                android:background="@drawable/tv2"
                android:gravity="center"
                android:text="Ngày giao dịch"
                android:textSize="12sp" />


            <TextView
                android:id="@+id/boxtile2"
                android:layout_width="0dp"
                android:layout_height="@dimen/_40sdp"
                android:layout_weight="2"
                android:background="@drawable/tv3"
                android:gravity="center"
                android:text="Mã CCQ"
                android:textSize="12sp" />

            <TextView
                android:id="@+id/boxtile3"
                android:layout_width="0dp"
                android:layout_height="@dimen/_40sdp"
                android:layout_weight="3"
                android:background="@drawable/tv3"
                android:gravity="center"
                android:text="Giá trị mua"
                android:textSize="12sp" />

            <TextView
                android:id="@+id/boxtile4"
                android:layout_width="0dp"
                android:layout_height="@dimen/_40sdp"
                android:layout_weight="3"
                android:background="@drawable/tv3"
                android:gravity="center"
                android:text="Giá thị trường"
                android:textSize="12sp" />


            <TextView
                android:id="@+id/boxtile5"
                android:layout_width="0dp"
                android:layout_height="@dimen/_40sdp"
                android:layout_weight="2"
                android:background="@drawable/tv"
                android:gravity="center"
                android:text="Lợi nhuận"
                android:textSize="12sp" />

        </LinearLayout>

        <ListView
            android:layout_marginRight="@dimen/_1sdp"
            android:layout_marginLeft="@dimen/_1sdp"
            android:layout_marginBottom="@dimen/_1sdp"
            android:id="@+id/lv"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:divider="@null" />

    </LinearLayout>

</LinearLayout>